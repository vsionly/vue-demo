html, body
    overflow: auto
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    font-size 16px

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
    font-weight bold
h6, .h6
    font-size 14px
h5, .h5
    font-size 16px
h4, .h4
    font-size 18px
h3, .h3
    font-size 20px
h2, .h2
    font-size 24px
h1, .h1
    font-size 28px

small
    font-size 12px
.fz14
    font-size 14px
.fz18
    font-size 18px
.bold
    font-weight bold
.btn-primary,
.btn-outline
    padding 7px 23px
    background $theme
    border-radius 4px
    border 1px solid $theme
    color #fff
    font-size 16px
    line-height 20px
    text-align center
    cursor pointer
.btn-outline
    border-color #BABABA
    background #fff
    color $theme
.btn-text
    padding 2px 8px
    font-size 16px
    background transparent
    cursor pointer
.btn-text + .btn-text
    margin-left 8px
.outline-primary
    padding 5px 15px
    margin-right 22px
    line-height 15px
    color $theme
    border 1px solid $theme
    border-radius 20px
    font-size 12px
    background #fff
